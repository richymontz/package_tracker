<div class="col-lg-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Create Order</h3>
    </div>
    <div class="panel-body">
      <%= form_for @order do |f| %>
        <div class="form-group">
          <%= f.label :order_number %>
          <%= f.text_field :order_number, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :vendor_id %>
          <%= f.select :vendor_id, vendor_for_select_options(@vendors), class: 'form-control' %>
          <%= link_to 'Create Vendor', new_vendor_path, class: 'btn btn-info btn-xs' %>
        </div>
        <div class="form-group">
          <%= f.label :tracking_number %>
          <%= f.text_field :tracking_number, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :shipping_address %>
          <%= f.text_field :shipping_address, class: 'form-control' %>
        </div>
        <%= f.submit 'Create', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
